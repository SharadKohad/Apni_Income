<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DashBoardActivity"
    tools:showIn="@layout/app_bar_dash_board"
    android:background="@color/grey_10"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/world_map"
            android:tint="@color/overlay_light_30" />

        <TextView
            android:id="@+id/textView_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_20sdp"/>

    </RelativeLayout>


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:scrollingCache="true">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:descendantFocusability="blocksDescendants"
           android:orientation="vertical">

           <android.support.v7.widget.CardView
               android:id="@+id/search_bar"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="@dimen/spacing_medium"
               android:layout_marginLeft="@dimen/spacing_middle"
               android:layout_marginRight="@dimen/spacing_middle"
               android:layout_marginTop="10dp"
               android:clipToPadding="false"
               app:cardBackgroundColor="@android:color/white"
               app:cardCornerRadius="4dp"
               app:cardElevation="2dp">

               <ss.com.bannerslider.views.BannerSlider
                   android:id="@+id/banner_slider1"
                   android:layout_width="match_parent"
                   android:layout_height="180dp"
                   app:interval="3000"
                   app:loopSlides="true"
                   app:defaultIndicators="circle"
                   android:animationCache="true"/>


           </android.support.v7.widget.CardView>


           <View
               android:layout_width="0dp"
               android:layout_height="25dp" />

           <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="@dimen/spacing_medium"
               android:layout_marginLeft="@dimen/spacing_middle"
               android:layout_marginRight="@dimen/spacing_middle"
               android:layout_marginTop="@dimen/spacing_middle"
               android:visibility="visible"
               app:cardCornerRadius="4dp"
               app:cardElevation="2dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:padding="@dimen/spacing_middle">

                   <View
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/spacing_mxlarge" />

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center_horizontal"
                       android:orientation="horizontal">

                       <LinearLayout
                           android:id="@+id/linear_layout_electricity"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:clickable="true"
                           android:gravity="center"
                           android:onClick="buttonClicked"
                           android:orientation="vertical">

                           <android.support.design.widget.FloatingActionButton
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:tint="@android:color/white"
                               app:backgroundTint="@color/light_green_500"
                               app:elevation="0dp"
                               app:fabSize="mini"
                               app:rippleColor="@android:color/white"
                               android:src="@drawable/ic_lightbulb"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="@dimen/spacing_medium"
                               android:text="ELECTRICITY"
                               android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                               android:textColor="@color/grey_40" />

                       </LinearLayout>

                       <LinearLayout
                           android:id="@+id/linear_layout_utility"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:clickable="true"
                           android:gravity="center"
                           android:onClick="buttonClicked"
                           android:orientation="vertical">

                           <android.support.design.widget.FloatingActionButton
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:tint="@android:color/white"
                               app:backgroundTint="@color/yellow_600"
                               app:elevation="0dp"
                               app:fabSize="mini"
                               app:rippleColor="@android:color/white"
                               android:src="@drawable/ic_invert_colors"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="@dimen/spacing_medium"
                               android:text="UTILITIES"
                               android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                               android:textColor="@color/grey_40" />
                       </LinearLayout>

                       <LinearLayout
                           android:id="@+id/linearlayout_mobile_reacharge"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:clickable="true"
                           android:onClick="buttonClicked"
                           android:orientation="vertical">

                           <android.support.design.widget.FloatingActionButton
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:tint="@android:color/white"
                               app:backgroundTint="@color/purple_400"
                               app:elevation="0dp"
                               app:fabSize="mini"
                               app:rippleColor="@android:color/white"
                               android:src="@drawable/ic_phone_android"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="@dimen/spacing_medium"
                               android:text="MOBILE"
                               android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                               android:textColor="@color/grey_40" />
                       </LinearLayout>


                       <LinearLayout
                           android:id="@+id/linear_layout_flightbooking"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:clickable="true"
                           android:onClick="buttonClicked"                           android:gravity="center"
                           android:orientation="vertical">

                           <android.support.design.widget.FloatingActionButton
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:tint="@android:color/white"
                               app:backgroundTint="@color/blue_400"
                               app:elevation="0dp"
                               app:fabSize="mini"
                               app:rippleColor="@android:color/white"
                               android:src="@drawable/ic_flight_takeoff"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="@dimen/spacing_medium"
                               android:text="FLIGHT"
                               android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                               android:textColor="@color/grey_40" />
                       </LinearLayout>

                   </LinearLayout>

                   <View
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/spacing_mlarge" />

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center_horizontal"
                       android:orientation="horizontal">

                       <LinearLayout
                           android:id="@+id/linear_layout_hotel"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:clickable="true"
                           android:gravity="center"
                           android:onClick="buttonClicked"
                           android:orientation="vertical">

                           <android.support.design.widget.FloatingActionButton
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:tint="@android:color/white"
                               app:backgroundTint="@color/indigo_300"
                               app:elevation="0dp"
                               app:fabSize="mini"
                               app:rippleColor="@android:color/white"
                               android:src="@drawable/ic_hotel"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="@dimen/spacing_medium"
                               android:text="HOTEL"
                               android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                               android:textColor="@color/grey_40" />

                       </LinearLayout>

                       <LinearLayout
                           android:id="@+id/linear_layout_DTH"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:clickable="true"
                           android:gravity="center"
                           android:onClick="buttonClicked"
                           android:orientation="vertical">

                           <android.support.design.widget.FloatingActionButton
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:tint="@android:color/white"
                               app:backgroundTint="@color/green_500"
                               app:elevation="0dp"
                               app:fabSize="mini"
                               app:rippleColor="@android:color/white"
                               android:src="@drawable/ic_live_tv"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="@dimen/spacing_medium"
                               android:text="DTH"
                               android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                               android:textColor="@color/grey_40" />
                       </LinearLayout>

                       <LinearLayout
                           android:id="@+id/linear_layout_train"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:clickable="true"
                           android:gravity="center"
                           android:onClick="buttonClicked"
                           android:orientation="vertical">

                           <android.support.design.widget.FloatingActionButton
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:tint="@android:color/white"
                               app:backgroundTint="@color/light_green_400"
                               app:elevation="0dp"
                               app:fabSize="mini"
                               app:rippleColor="@android:color/white"
                               android:src="@drawable/ic_train"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="@dimen/spacing_medium"
                               android:text="TRAIN"
                               android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                               android:textColor="@color/grey_40" />
                       </LinearLayout>

                       <LinearLayout
                           android:id="@+id/linear_layout_bus"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:clickable="true"
                           android:gravity="center"
                           android:onClick="buttonClicked"
                           android:orientation="vertical">

                           <android.support.design.widget.FloatingActionButton
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:tint="@android:color/white"
                               app:backgroundTint="@color/orange_300"
                               app:elevation="0dp"
                               app:fabSize="mini"
                               app:rippleColor="@android:color/white"
                               android:src="@drawable/ic_bus" />

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="@dimen/spacing_medium"
                               android:text="BUS"
                               android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                               android:textColor="@color/grey_40" />

                       </LinearLayout>

                   </LinearLayout>


                   <View
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/spacing_mxlarge" />

               </LinearLayout>

           </android.support.v7.widget.CardView>


           <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="6dp"
               app:cardElevation="2dp"
               android:layout_marginLeft="@dimen/spacing_middle"
               android:layout_marginRight="@dimen/spacing_middle"
               android:layout_marginTop="@dimen/_10sdp"
               app:cardUseCompatPadding="true">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:padding="@dimen/spacing_large">

                       <RelativeLayout
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:layout_marginTop="1dp">

                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:layout_centerInParent="true"
                               android:tint="@color/grey_10"
                               app:srcCompat="@drawable/shape_circle" />

                           <ImageView
                               android:layout_width="15dp"
                               android:layout_height="15dp"
                               android:layout_centerInParent="true"
                               android:tint="@color/grey_40"
                               android:src="@drawable/ic_arrow_downward"/>

                       </RelativeLayout>

                       <View
                           android:layout_width="@dimen/spacing_middle"
                           android:layout_height="0dp" />

                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:orientation="vertical">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Total Balance"
                               android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                               android:textColor="@color/indigo_900" />

                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="end"
                           android:orientation="vertical">

                           <TextView
                               android:id="@+id/text_view_total_balance"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                               android:textColor="@color/light_blue_500" />

                       </LinearLayout>

                   </LinearLayout>

               </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="6dp"
               app:cardElevation="2dp"
               android:layout_marginLeft="@dimen/spacing_middle"
               android:layout_marginRight="@dimen/spacing_middle"
               app:cardUseCompatPadding="true">

               <LinearLayout
                   android:id="@+id/linear_layout_generated_ro_history"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:padding="@dimen/spacing_large">

                   <RelativeLayout
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:layout_marginTop="1dp">

                       <ImageView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_centerInParent="true"
                           android:tint="@color/grey_10"
                           app:srcCompat="@drawable/shape_circle" />

                       <ImageView
                           android:layout_width="15dp"
                           android:layout_height="15dp"
                           android:layout_centerInParent="true"
                           android:tint="@color/grey_40"
                           android:src="@drawable/ic_arrow_downward"/>

                   </RelativeLayout>

                   <View
                       android:layout_width="@dimen/spacing_middle"
                       android:layout_height="0dp" />

                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Total_Direct_Income"
                           android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                           android:textColor="@color/indigo_900" />

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="end"
                       android:orientation="vertical">

                       <TextView
                           android:id="@+id/text_view_total_direct_income"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                           android:textColor="@color/light_blue_500" />

                   </LinearLayout>

               </LinearLayout>

           </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="6dp"
               app:cardElevation="2dp"
               android:layout_marginLeft="@dimen/spacing_middle"
               android:layout_marginRight="@dimen/spacing_middle"
               app:cardUseCompatPadding="true">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:padding="@dimen/spacing_large">

                   <RelativeLayout
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:layout_marginTop="1dp">

                       <ImageView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_centerInParent="true"
                           android:tint="@color/grey_10"
                           app:srcCompat="@drawable/shape_circle" />

                       <ImageView
                           android:layout_width="15dp"
                           android:layout_height="15dp"
                           android:layout_centerInParent="true"
                           android:tint="@color/grey_40"
                           android:src="@drawable/ic_arrow_downward"/>

                   </RelativeLayout>

                   <View
                       android:layout_width="@dimen/spacing_middle"
                       android:layout_height="0dp" />

                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Total ROI"
                           android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                           android:textColor="@color/indigo_900" />

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="end"
                       android:orientation="vertical">

                       <TextView
                           android:id="@+id/text_view_total_roi"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                           android:textColor="@color/light_blue_500" />

                   </LinearLayout>

               </LinearLayout>

           </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="6dp"
               app:cardElevation="2dp"
               android:layout_marginLeft="@dimen/spacing_middle"
               android:layout_marginRight="@dimen/spacing_middle"
               app:cardUseCompatPadding="true">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:padding="@dimen/spacing_large">

                   <RelativeLayout
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:layout_marginTop="1dp">

                       <ImageView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_centerInParent="true"
                           android:tint="@color/grey_10"
                           app:srcCompat="@drawable/shape_circle" />

                       <ImageView
                           android:layout_width="15dp"
                           android:layout_height="15dp"
                           android:layout_centerInParent="true"
                           android:tint="@color/grey_40"
                           android:src="@drawable/ic_arrow_downward"/>

                   </RelativeLayout>

                   <View
                       android:layout_width="@dimen/spacing_middle"
                       android:layout_height="0dp" />

                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Total_Binary_Income"
                           android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                           android:textColor="@color/indigo_900" />

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="end"
                       android:orientation="vertical">

                       <TextView
                           android:id="@+id/text_view_total_binary_income"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                           android:textColor="@color/light_blue_500" />

                   </LinearLayout>

               </LinearLayout>

           </android.support.v7.widget.CardView>

       </LinearLayout>

   </android.support.v4.widget.NestedScrollView>

</LinearLayout>